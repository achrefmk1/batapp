<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AddzoneFragment"
    android:orientation="vertical"
    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD New Zone"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="12dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/linear_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:background="@color/whitesmoke">

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="text"
            android:background="@drawable/btn_corners"
            android:drawableStart="@drawable/username"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:hint="username"
            android:id="@+id/username_zone"/>

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:background="@drawable/btn_corners"
            android:drawableStart="@drawable/add_location"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:hint="Zone Adresse"
            android:id="@+id/adresse_zone"/>

        <Spinner
            android:entries="@array/state_list"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:id="@+id/state_zone"
            />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:background="@drawable/btn_corners"
            android:drawableStart="@drawable/calendar"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:focusableInTouchMode="false"

            android:hint="Date"
            android:id="@+id/date_zone"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="30sp"
        android:layout_gravity="center"
        android:id="@+id/save_zone"/>

    </LinearLayout>

</LinearLayout>